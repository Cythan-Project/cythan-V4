@AllowOnly(0..=1)
class Bool {

    Val value;

    Bool true() {
        return Bool { value = 0 };
    }

    Bool false() {
        return Bool { value = 1 };
    }
    Bool not(Bool self) {
        return if self.value {
            1
        } else {
            0
        };
    }

    print(Bool self) {
        if self {
            "true"
        } else {
            "false"
        }.print();
    }
}